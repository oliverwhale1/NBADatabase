            @Html.EditorFor(model => model.Rebounds, null, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Rebounds, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-success" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
}


<a class="btn btn-primary infoButton" data-toggle="modal" data-target=".positionDetails"><span class="glyphicon glyphicon-eye-open glyphicon-align-right"></span>Position Details</a>

<div class="modal fade positionDetails">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button data-dismiss="modal" class="close"> <span>&times;</span></button>
                <div class="modal-title"><h1>NBA Positions</h1></div>
            </div>
            <div class="modal-body">
                <p>
                    1. Point Guard = PG<br /><br />
                    2. Shooting Guard = SG<br /><br />
                    3. Small Forward = SF<br /><br />
                    4. Power Forward = PF<br /><br />
                    5. Center = C
                </p>
                <hr />
                <p>Use the two letter code which corresponds to the player's position.</p>
            </div>
        </div>
    </div>
</div>

